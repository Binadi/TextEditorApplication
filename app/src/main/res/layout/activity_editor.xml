<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#FFFFFFFF">

    <!-- Header -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a58312"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/codepad"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Main Content: Sidebar + Editor with Line Numbers -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Sidebar -->
        <ScrollView
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/leftSidebar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFAFAFA"
                android:gravity="top|center_horizontal">

                <!-- File Operations -->
                <ImageButton
                    android:id="@+id/btn_new"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/new_file"
                    android:src="@drawable/ic_new" />

                <ImageButton
                    android:id="@+id/btn_open"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/open_file"
                    android:src="@drawable/ic_open" />

                <ImageButton
                    android:id="@+id/btn_save"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/save_file"
                    android:src="@drawable/ic_save" />

                <ImageButton
                    android:id="@+id/btn_compile"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/compile"
                    android:src="@drawable/ic_compile" />

                <!-- Edit Operations -->
                <ImageButton
                    android:id="@+id/btn_cut"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/cut"
                    android:src="@drawable/ic_cut" />

                <ImageButton
                    android:id="@+id/btn_copy"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/copy"
                    android:src="@drawable/ic_copy" />

                <ImageButton
                    android:id="@+id/btn_paste"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/paste"
                    android:src="@drawable/ic_paste" />

                <ImageButton
                    android:id="@+id/btn_undo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/undo"
                    android:src="@drawable/ic_undo" />

                <ImageButton
                    android:id="@+id/btn_redo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/redo"
                    android:src="@drawable/ic_redo" />

                <ImageButton
                    android:id="@+id/btn_find"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/findreplace"
                    android:src="@drawable/ic_find" />

            </LinearLayout>
        </ScrollView>

        <!-- Vertical Divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#DDDDDD" />

        <!-- Line Numbers + Code Editor -->
        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- Line Numbers -->
                <TextView
                    android:id="@+id/lineNumbers"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:background="#F0F0F0"
                    android:padding="8dp"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    android:gravity="top|end"
                    android:scrollbars="none" />

                <!-- Code Editor -->
                <EditText
                    android:id="@+id/code_editor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFAFAFA"
                    android:fontFamily="monospace"
                    android:gravity="top|start"
                    android:inputType="textMultiLine|textNoSuggestions|textVisiblePassword"
                    android:overScrollMode="always"
                    android:padding="8dp"
                    android:scrollbars="vertical"
                    android:textColor="#FF000000"
                    android:textSize="14sp" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Horizontal Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD" />

    <!-- Footer -->
    <TextView
        android:id="@+id/wordCountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/words_0_characters_0"
        android:textAlignment="center"
        android:textColor="#FF444444"
        android:background="#FFFAFAFA"
        android:gravity="center" />
</LinearLayout>
